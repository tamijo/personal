<div class="projects">
		<% if @projects %>
			<% @projects.each do |project| %>
			<div class="project pull-left">
				<a class="inline" href=<%= project['img']%>><img class="thumbnail pull-left" src=<%= project['img']%> ></a>
				<div class="box">
					<div class="title"><%= project['title'] %></div>
					<div class="light"><%= project['subtitle'] %></div>
					<div class="info">
						<%= project['description'] %>
					</div><br />
					<a class="source" href=<%= project['url']%> >Source</a>
				</div>
			</div>
			<div class="clearfix"></div>
			<% end %>
 
		  <% end %>
</div>