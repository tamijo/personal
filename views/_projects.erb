<div class="container fourteen columns offset-by-one">
<div class="projects">
		<% if @projects %>
			<% @projects.each do |project| %>
			<div class="project container row thirteen columns">
				<!-- <div class="seven columns alpha"> -->
					<a class="inline seven columns alpha" href=<%= project['img']%>><img class="thumbnail pull-left" src=<%= project['img']%> ></a>
				<!-- </div> -->
				<div class="box six columns omega"> <!-- box -->
					<div class="title"><%= project['title'] %></div>
					<div class="light"><%= project['subtitle'] %></div>
					<div class="info">
						<%= project['description'] %>
					</div><br />
					<a class="source" href=<%= project['url']%> >Source</a>
				</div>
			</div>
			<div class="clearfix"></div>
			<% end %>
 
		  <% end %>
</div>
</div>